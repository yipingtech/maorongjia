<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	<constant name="struts.codebehind.pathPrefix" value="/WEB-INF/jsp/" />

	<package name="ep_column" extends="struts-default" namespace="/column">

		<interceptors>
			<interceptor name="authority"
				class="cc.modules.security.AuthorityIntercept">
			</interceptor>

			<interceptor-stack name="author">
				<interceptor-ref name="authority"></interceptor-ref>
				<interceptor-ref name="defaultStack"></interceptor-ref>
			</interceptor-stack>
			
		</interceptors> 
		
		<default-interceptor-ref name="author"></default-interceptor-ref>

		<global-results>
			<result name="login">/WEB-INF/jsp/index.jsp</result>
		</global-results>

		<action name="epColumnAction" class="epColumnAction">
			<result name="input">
				/WEB-INF/jsp/enterprise/column/epColumn.jsp
			</result>
			<result>/WEB-INF/jsp/enterprise/column/epColumn.jsp</result>
			<result name="do_failure">
				/WEB-INF/jsp/enterprise/column/epColumn.jsp
			</result>
			<result name="do_success" type="redirect">
				epColumnAction.action
			</result>
			<result name="add_page">
				/WEB-INF/jsp/enterprise/column/epColumn_new.jsp
			</result>
			<result name="view">
				/WEB-INF/jsp/enterprise/column/epColumn_view.jsp
			</result>
			<result name="edit">
				/WEB-INF/jsp/enterprise/column/epColumn_edit.jsp
			</result>
			
			<!-- 防止重复提交 -->
            <result name="invalid.token">/WEB-INF/jsp/error_double_click.jsp</result>
           	<interceptor-ref name="author"></interceptor-ref>
          	<interceptor-ref name="token">
            	<!-- includeMethods表示包含指定的方法， 即对标记为includeMethods的方法进行拦截 -->
                <param name="includeMethods">add,update</param>
            	<!-- 定义被排除的方法名， 也就是你action中不被这个拦截器拦截的方法名 -->
               	<param name="excludeMethods"></param>
            </interceptor-ref>
			
		</action>

	</package>

</struts>
